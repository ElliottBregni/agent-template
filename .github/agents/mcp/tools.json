{
  "tools": {
    "github": {
      "allowed": [
        "get_pull_request",
        "list_pull_request_files",
        "create_pull_request_review",
        "get_issue",
        "list_issues",
        "create_issue_comment",
        "search_code",
        "get_file_contents",
        "list_commits"
      ],
      "denied": [
        "delete_repository",
        "transfer_repository",
        "update_repository_settings"
      ]
    },
    "slack": {
      "allowed": [
        "post_message",
        "list_channels",
        "get_channel_history"
      ],
      "denied": [
        "delete_message",
        "admin_*"
      ]
    },
    "sentry": {
      "allowed": [
        "list_issues",
        "get_issue_details",
        "list_events",
        "get_stacktrace"
      ]
    },
    "linear": {
      "allowed": [
        "list_issues",
        "create_issue",
        "update_issue",
        "list_projects",
        "add_comment"
      ]
    }
  },
  "rate_limits": {
    "default": {
      "requests_per_minute": 60,
      "max_concurrent": 5
    },
    "github": {
      "requests_per_minute": 30,
      "max_concurrent": 3
    }
  }
}
