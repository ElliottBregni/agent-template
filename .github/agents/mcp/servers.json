{
  "servers": [
    {
      "name": "github",
      "url": "https://mcp.github.com/sse",
      "auth": "${{ secrets.GITHUB_MCP_TOKEN }}",
      "description": "GitHub repo operations, PRs, issues, code search"
    },
    {
      "name": "linear",
      "url": "https://mcp.linear.app",
      "auth": "${{ secrets.LINEAR_API_KEY }}",
      "description": "Issue tracking and project management"
    },
    {
      "name": "slack",
      "url": "https://mcp.slack.com/sse",
      "auth": "${{ secrets.SLACK_BOT_TOKEN }}",
      "description": "Channel messaging and notifications"
    },
    {
      "name": "sentry",
      "url": "https://mcp.sentry.io/sse",
      "auth": "${{ secrets.SENTRY_AUTH_TOKEN }}",
      "description": "Error tracking and exception investigation"
    },
    {
      "name": "datadog",
      "url": "https://mcp.datadoghq.com/sse",
      "auth": "${{ secrets.DD_API_KEY }}",
      "description": "Monitoring, metrics, and log analysis"
    },
    {
      "name": "notion",
      "url": "https://mcp.notion.so/sse",
      "auth": "${{ secrets.NOTION_API_KEY }}",
      "description": "Documentation and knowledge base"
    },
    {
      "name": "vercel",
      "url": "https://vercel.com/api/mcp",
      "auth": "${{ secrets.VERCEL_TOKEN }}",
      "description": "Deployment status and preview environments"
    },
    {
      "name": "supabase",
      "url": "https://mcp.supabase.com/mcp",
      "auth": "${{ secrets.SUPABASE_KEY }}",
      "description": "Database and auth management"
    },
    {
      "name": "posthog",
      "url": "https://mcp.posthog.com/sse",
      "auth": "${{ secrets.POSTHOG_API_KEY }}",
      "description": "Product analytics and feature flags"
    }
  ]
}
